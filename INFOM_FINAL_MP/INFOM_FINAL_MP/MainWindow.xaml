<Window x:Class="INFOM_FINAL_MP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INFOM_FINAL_MP"
        mc:Ignorable="d" FontSize="20" FontFamily="Century Gothic"
        Title="Stat Track" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20" /><!-- For the left margin-->
			<ColumnDefinition Width="auto" /><!-- button column-->
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" /> <!-- last column for db-->
			<ColumnDefinition Width="*" /><!-- nice -->
			<ColumnDefinition Width="20" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="20"/>
		</Grid.RowDefinitions>

		<TextBox x:Name="SearchBar"
				Grid.Column="2" Grid.Row="1"
				 Text="search player"
				 Margin="10,10"
				 />

		<TextBlock 
					x:Name="MainTitle"
					Grid.Column="1" Grid.Row="1" 
				   FontSize="28" 
				   Text="Stat Track"
				   FontFamily="Comic Sans MS"
				   
				   Margin="0,0,0,10"/>

		<TextBlock x:Name="sql_2_2"
				   Grid.Column="2" Grid.Row="2" 
				   Text="Add text here 2"
				   />
		<TextBlock x:Name="sql_3_2"
				   Grid.Column="3" Grid.Row="2" 
				   Text="Add text here 3"
				   />
		<TextBlock x:Name="sql_4_2"
				   Grid.Column="4" Grid.Row="2" 
				   Text="Add text here 3"
				   />
		<TextBlock x:Name="sql_5_2"
				   Grid.Column="5" Grid.Row="2" 
				   Text="Add text here 3"
				   />
		
		<!-- buttons to change views-->
		<Button x:Name="PlayerButton" 
				Grid.Column="1" Grid.Row="3"
				Content="Player Stats"
				Margin="10,10" Click="PlayerButton_Click"/>

		<Button x:Name="MapStatsButton" 
				Grid.Column="1" Grid.Row="4"
				Content="Map Stats"
				Margin="10,10"/>
		<!-- contents go here-->
		<TextBlock x:Name="sql_2_3" Grid.Column="2" Grid.Row="3" 
				   Text="Add text here"
				   Margin="10,10"
				   />
		
	</Grid>
</Window>
